{
    "version": 2,
    "builds": [
      {
        "src": "index.js",
        "use": "@vercel/node"
      },
      {
        "src": "aulaVirtual/dist/**/*",
        "use": "@vercel/static"
      }
    ],
    "rewrites": [
      { "source": "/(.*)", "destination": "/index.js" },
      { "source": "/aulaVirtual/dist/(.*)", "destination": "/aulaVirtual/dist/$1" }
    ],
    "headers": [
      {
        "source": "/aulaVirtual/dist/(.*).css",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      }
    ]
  }
  