                </div>
                <div class="col-6">
                    <label for="lastName" class="form-label">Last name</label>
                    <input type="text" class="form-control" id="lastName" placeholder="" name="lname" required>
                </div>
            </div>
            <!-- REGISTRO PARA LOS ID -->
            <div class="row">
                <div class="col-4">
                    <label for="firstName" class="form-label">Sexo</label>
