                </div>
                <div class="col-4">
                    <label for="firstName" class="form-label">Area desempeñada</label>
                    <input type="text" class="form-control" placeholder="text..." aria-label="Last name" name="area_dese" required>
                </div>
                <div class="col-4">
                    <label for="firstName" class="form-label">Telefono </label>
                  <input type="number" class="form-control" placeholder="Numero" aria-label="Last name" name="tel" required>
                </div>
            </div>
            <!-- CREACION DE CORREO Y ADDRESS -->
            <div class="row">
                <div class="col-sm-6">
                    <label for="firstName" class="form-label">Email</label>
                    <input type="email" class="form-control" id="firstName" placeholder="" name="email" required>
                </div>
                <div class="col-sm-6">
                    <label for="lastName" class="form-label">Dirección</label>
                    <input type="text" class="form-control" id="lastName" placeholder="" name="direccion" required>
                </div>
            </div>
        </section>
        <section id="perfil-prof">
            <div class="text-success">
                <h4>Perfil  </h4>
                <hr>
            </div>
            <div class="col-6">
                <label for="exampleFormControlInput1" class="form-label">Años de experiencia</label>
                <input type="number" class="form-control" id="exampleFormControlInput1" placeholder="" name="anos_exp" required>
              </div>
            <div class="mb-3">
                <label for="exampleFormControlTextarea1" class="form-label">Perfil profesional o descripción </label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="perfil_prof" required></textarea>
              </div> 
        </section>    
        <section id="experiencia-prof">
            <div class="text-success">
                <h4>Experiencia</h4>
                <hr>
            </div>

            <div id="form-exp" class="row">
                <div id="creacion-form">
                    <div class="col-4">
                        <label for="firstName" class="form-label">Intitucion / Empresa</label>
                        <input type="text" class="form-control" placeholder="Numero" aria-label="Last name" name="inst_exp_ult">
                    </div>
                    <div class="col-4">
                        <label for="firstName" class="form-label">Cargo</label>
                        <input type="text" class="form-control" placeholder="text..." aria-label="Last name" name="cargo_ult">
                    </div>
                    <div class="col-4">
                        <label for="firstName" class="form-label">Tiempo laborado</label>
                        <input type="number" class="form-control" placeholder="Numero" aria-label="Last name" name="tiemp_lab_ult">
                    </div>
                    <div class="input-group col mt-4">
                        <input type="file" class="form-control" id="inputGroupFile02" name="file_cert">
                        <label class="input-group-text" for="inputGroupFile02">Upload</label>
                    </div>  
                    <div class="text-success">
                        <hr>
                    </div>      
                </div>
                
            </div>
            <div  class="mt-4">
                <button id="add-experience" type="button" class="btn btn-outline-success">Añadir experiencia</button>
