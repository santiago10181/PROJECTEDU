<div id='calendar' class="container"  ></div>
<script>
  var miEvento = {
    title: 'Simulacro:',
    start: '2024-06-08T10:00:00', // Fecha y hora de inicio en formato ISO
    end: '2024-06-08T12:00:00', // Fecha y hora de fin en formato ISO
    extendedProps: {
    content: 'Presentacion de 1Â° simulacro' // Contenido adicional del evento
  }
};


  document.addEventListener('DOMContentLoaded', async function () {
    var calendarEl = document.getElementById('calendar');
    var calendar = new FullCalendar.Calendar(calendarEl, {
      initialView: 'dayGridMonth',
      height: 500,
      locale: 'es',
      eventMaxWidth: 300,
      eventContent: function(arg) {
        return {
          html: '<strong>' + arg.event.title + '</strong><br>' + arg.event.extendedProps.content
        };
      }
    });

    await calendar.updateSize();
    await calendar.addEvent(miEvento);
    await calendar.render();
  });


  </script>